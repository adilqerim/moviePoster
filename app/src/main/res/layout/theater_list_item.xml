<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:cardCornerRadius="8dp"
        android:layout_margin="8dp">
    <LinearLayout
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:padding="20dp">

        <TextView
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:id="@+id/tv_theater_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                tools:text="name"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:textStyle="italic"
                    android:layout_gravity="end"
                    android:text="Время сеансов :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/time_textView" android:layout_weight="1"/>
            <TextView
                    android:textStyle="italic"
                    android:layout_gravity="center"
                    android:id="@+id/tv_theater_session"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    tools:text="session"/>
        </LinearLayout>
        <TextView
                android:textSize="12sp"
                android:layout_gravity="left"
                android:id="@+id/tv_theater_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="address"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
